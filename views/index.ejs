<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Alumnos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <% if (typeof success !== 'undefined') { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
            <% } %>
                <h1>Lista de Alumnos</h1>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Número de Control</th>
                            <th>Nombre</th>
                            <th>Apellido Paterno</th>
                            <th>Apellido Materno</th>
                            <th>ID de Grupo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% alumnos.forEach(alumno => { %>
                            <tr>
                                <td>
                                    <a href="/alumnos/<%= alumno.NC %>">
                                        <%= alumno.NC %>
                                    </a>
                                </td>
                                <td>
                                    <%= alumno.Nombre %>
                                </td>
                                <td>
                                    <%= alumno.App %>
                                </td>
                                <td>
                                    <%= alumno.Apm %>
                                </td>
                                <td>
                                    <%= alumno.IDGrupo %>
                                </td>
                                <td>
                                    <a href="/alumnos/edit/<%= alumno._id %>" class="btn btn-warning">Editar</a>
                                    <button onclick="eliminarAlumno('<%= alumno._id %>')" class="btn btn-danger">Eliminar</button>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
    </div>
    <script>
        function eliminarAlumno(id) {
            if (confirm("¿Estás seguro de que deseas eliminar este alumno?")) {
                fetch(`/alumnos/${id}`, {
                        method: 'DELETE',
                    })
                    .then(response => {
                        if (response.ok) {
                            location.reload(); // Recarga la página para ver la lista actualizada
                        } else {
                            alert('Error al eliminar el alumno');
                        }
                    });
            }
        }
    </script>
</body>

</html>